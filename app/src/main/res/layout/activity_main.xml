<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/btnMoveForward"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/question_text"
        android:layout_width="327dp"
        android:layout_height="98dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="152dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/roboto"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/answer_false_button"
        android:layout_width="132dp"
        android:layout_height="54dp"
        android:layout_marginEnd="50dp"
        android:text="@string/answer_false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/answer_true_button"
        app:layout_constraintTop_toBottomOf="@+id/check_answer_text"
        app:layout_constraintVertical_bias="0.07" />

    <Button
        android:id="@+id/answer_true_button"
        android:layout_width="132dp"
        android:layout_height="54dp"
        android:layout_marginStart="50dp"
        android:text="@string/answer_true"
        app:layout_constraintBaseline_toBaselineOf="@+id/answer_false_button"
        app:layout_constraintEnd_toStartOf="@+id/answer_false_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/move_back_button"
        android:layout_width="108dp"
        android:layout_height="50dp"
        android:layout_marginStart="70dp"
        android:text="@string/move_back"
        app:layout_constraintBaseline_toBaselineOf="@+id/move_Fwd_button"
        app:layout_constraintEnd_toStartOf="@+id/move_Fwd_button"
        app:layout_constraintHorizontal_bias="0.647"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/move_Fwd_button"
        android:layout_width="108dp"
        android:layout_height="50dp"
        android:layout_marginEnd="70dp"
        android:text="@string/move_fwd"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/move_back_button"
        app:layout_constraintTop_toBottomOf="@+id/answer_false_button"
        app:layout_constraintVertical_bias="0.03" />

    <TextView
        android:id="@+id/check_answer_text"
        android:layout_width="96dp"
        android:layout_height="76dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.445"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/question_text" />

</androidx.constraintlayout.widget.ConstraintLayout>